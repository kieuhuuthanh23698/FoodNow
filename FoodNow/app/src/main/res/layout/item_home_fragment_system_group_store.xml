<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_system_group_store_background"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/tip1"
    android:layout_width="300dp"
    android:layout_height="150dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_system_group_store_main_text"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="Lần đầu Order tại FoodNow bạn ăn gì ?"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_system_group_store_sub_text"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:text="Khao bạn 45K menu này nha!"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

</RelativeLayout>