<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/fm_home_myAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="Số 6, Phan Đình Giót, Phường 2, Tân Bình..." />

        </RelativeLayout>

        <EditText
            android:id="@+id/fm_home_goToSearchAct"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_button"
            android:backgroundTint="#F5F2F2"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:ems="10"
            android:focusable="false"
            android:hint="Tìm nhà hàng, món ăn"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textSize="15dp" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#F5F2F2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:background="#F5F2F2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/di_cho"
                            style="@style/sizeOfSliderMain_1" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Đi chợ"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/chuoi"
                            style="@style/sizeOfSliderMain_1" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Chuỗi"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/mo_han"
                            style="@style/sizeOfSliderMain_1"/>

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Món hàn"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/tra_sua"
                            style="@style/sizeOfSliderMain_1"/>

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Trà sữa"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/com_phan"
                            style="@style/sizeOfSliderMain_1" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Cơm phần"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ga_ran"
                            style="@style/sizeOfSliderMain_1" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Gà rán"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bun_pho"
                            style="@style/sizeOfSliderMain_1" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Bún phở"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/menu_item"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/an_vat"
                            style="@style/sizeOfSliderMain_1"/>

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Ăn vặt"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <!--<HorizontalScrollView-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:measureAllChildren="false"-->
                <!--android:scrollbars="none"-->
                <!--android:fillViewport="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/scrollViewVoucher"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--</HorizontalScrollView>-->

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                style="@style/title"
                android:text="Hôm nay ăn gì ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<HorizontalScrollView-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:measureAllChildren="false"-->
            <!--android:scrollbars="none"-->
            <!--android:fillViewport="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/scrollViewSystemVoucher"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        <!--</HorizontalScrollView>-->

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/susggestList"
                android:orientation="vertical"
                app:msrv_ms_per_inch="120"
                app:msrv_snap_count="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                style="@style/title"
                android:text="Quanh đây có gì ngon ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                android:id="@+id/storeNeartList"
                android:orientation="vertical"
                app:msrv_ms_per_inch="120"
                app:msrv_snap_count="2"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>