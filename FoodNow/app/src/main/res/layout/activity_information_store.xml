            <!--<ImageView-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/ic_search_white_24dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->

            <!--<ImageView-->
