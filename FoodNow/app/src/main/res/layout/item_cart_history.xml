<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/frament_cart_detail_img"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/img_store2"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/frament_cart_detail_storename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cơm Tấm Cali - Nguyễn Chí Thanh"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:lines="1"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/frament_cart_detail_storeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:textColor="#6F6D6D"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:text="125 Nguyễn Chí Thanh, P.9, Quận 5, TP.HCM"/>

            </LinearLayout>

            <TextView
                android:id="@+id/frament_cart_detail_total"
                android:text="35,000 Đ (4 Phần)"
                android:textSize="16dp"
                android:textStyle="bold"
                android:lines="1"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        style="@style/devider"
        android:layout_width="match_parent" />

</LinearLayout>