<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:src="@drawable/img_store2"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cơm tấm sườn non  + bì + chả"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito_extralight"
            android:lines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txtFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:textColor="#6F6D6D"
            android:ellipsize="end"
            android:textSize="12dp"
            android:text="Giá đã bao gồm 10% VAT"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/ic_card_giftcard_black_24dp"
                android:gravity="center_vertical"
                android:textColor="#6F6D6D"
                android:text="15 + "
                android:textSize="12dp"
                android:id="@+id/txtFoodCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/numFoodLike"
                android:gravity="center_vertical"
                android:textColor="#6F6D6D"
                android:text=" 9"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="90,000 đ"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/txtFoodPrice"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_extralight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/btnAddToCart"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>