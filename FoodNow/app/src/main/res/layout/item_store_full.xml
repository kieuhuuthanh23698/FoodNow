<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgStore_full"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/img_store2"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_storename_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cơm Tấm Cali - Nguyễn Chí Thanh"
            android:textSize="16dp"
            android:textStyle="bold"
            android:lines="1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nunito_extralight"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txt_storeAddress_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textColor="#6F6D6D"
            android:ellipsize="end"
            android:textSize="12dp"
            android:text="125 Nguyễn Chí Thanh, P.9, Quận 5, TP.HCM"/>

        <TextView
            android:id="@+id/txtStar"
            android:drawableLeft="@drawable/ic_star"
            android:text="4.6"
            android:textColor="#6F6D6D"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/ic_clock"
                android:textColor="#6F6D6D"
                android:text="15 phút"
                android:textSize="12dp"
                android:id="@+id/store_near_time"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/store_near_distance"
                android:textColor="#6F6D6D"
                android:text=" 0.2 km"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:drawableLeft="@drawable/ic_circle"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>