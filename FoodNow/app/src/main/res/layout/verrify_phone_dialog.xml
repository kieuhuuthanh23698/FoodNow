<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/border_layout_all_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="Xác thực số điện thoại của bạn"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Hãy nhập mã OTP đã nhận được"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/verrify_phone_dialog_input"
        android:maxLength="6"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center_horizontal"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Bạn chưa nhận được mã ?"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/verrify_phone_dialog_btn_resend"
            android:text="Gửi lại"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/verrify_phone_dialog_btn_confirm"
        android:background="@color/colorGrayLight"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:layout_weight="2"
        android:text="Xác thực"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


</LinearLayout>